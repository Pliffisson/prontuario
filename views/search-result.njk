{% extends "layout.njk" %}

{% set bodyId = "page-search-result" %}

{% block title %}
    <title>Prontuario - Resultado de Pesquisa</title>
{% endblock %}

{% block styles %}
    <link rel="stylesheet" href="/styles/search-result.css">
{% endblock %}

{% block script %}
    <script src="/scripts/search-result.js" defer></script>
{% endblock %}

{% block content %}
    <header>
        <img src="/assets/logo.svg" width="50px" alt="logo">
        <a href="/">
            <span></span>
            Voltar para home
            </a>
    </header>

    <main>
        <h4>
            <strong>3 pacientes</strong> encontrados
        </h4>

        <div class="results">

            {% for patient in patients %}
            <div id="{{ patient.id }}" class="info">
                <h3>{{ patient.name }}</h3>
                <p>CPF: {{ patient.cpf }}</p>
            </div>
            {% endfor %}

        </div>
    </main>      
{% endblock %}
