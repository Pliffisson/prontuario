{% extends "layout.njk" %}

{% set bodyId = "page-patient" %}

{% block title %}
    <title>Prontuario - Paciente</title>
{% endblock %}

{% block styles %}
    <link rel="stylesheet" href="/styles/patient.css">
{% endblock %}

{% block content %}
<div class="content">
    <header>
        <img src="/assets/logo.svg" width="50px" alt="logo">
        <a href="/">
            <span></span>
            Voltar para home
        </a>
    </header>

    <main>

        <div class="info-patient">
            <h2>{{ patient.name }}</h2>
            <p>CPF: {{ patient.cpf }}</p>
            <p>RG: {{ patient.rg }}</p>
            <p>Endereço: {{ patient.address }}</p>
            <p>Telefone: {{ patient.cellphone }}</p>
            <p>Contato para Emergência: {{ patient.emergency }}</p>
            <p>Data de Nascimento:</p>
            <p>{{ patient.age }}</p>
            <p>Alergia: {{ patient.allergy }}</p>
        </div>

        <div class="procedures">
            <div class="btn">
                <a href="/create-procedure">
                    <span></span>Novo procedimento</a>
            </div>

            <div class="procedure">
                <div class="type">
                    <img src="/assets/restauracao.svg" alt="restauracao" width="60">
                    {% for details in patient.procedures %}
                        <span>{{ details.type }}</span>
                        {% endfor %}
                </div>
                <div class="info">
                    <div class="group-info">
                        <h4>Data:</h4>
                        {% for details in patient.procedures %}
                        <p>{{ details.date }}</p>
                        {% endfor %}
                        <h4>Valor:</h4>
                        <p></p>
                    </div>
                    <div class="group-info">
                        <h4>Observações:</h4>
                        <p></p>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>
{% endblock %}